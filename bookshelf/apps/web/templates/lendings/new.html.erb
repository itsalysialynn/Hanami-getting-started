<h2>Add Lending</h2>

<%=
  form_for :lending, '/lendings' do
    div class: 'input' do
      label      :title
      text_field :title
    end

    div class: 'input' do
      label      :first_name
      text_field :first_name
    end

    div class: 'input' do
      label      :last_name
      text_field :last_name
    end

    div class: 'input' do
      label      :address
      text_field :address
    end

    div class: 'input' do
      label      :phone
      text_field :phone
    end

    div class: 'controls' do
      submit 'Create Lending'
    end
  end
%>
<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>